<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_strock"
    android:foregroundGravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintEnd_toStartOf="@+id/guideline13"
    app:layout_constraintStart_toStartOf="@+id/guideline12"
    app:layout_constraintTop_toTopOf="@+id/guideline14"
    tools:ignore="Suspicious0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/_postUserProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/imagebackfile"
            android:padding="2dp"
            android:src="@drawable/enter_profile_icon"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="#980202"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/_postUsernameText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:text="Username"
                android:textColor="@color/myFav"
                android:textSize="16sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="22dp" />

            <TextView
                android:id="@+id/_postUserCityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="12dp"
                android:text="City"
                android:textColor="@color/myFav" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/keepcalm_medium"
            android:gravity="center"
            android:text=" I need a "
            android:textColor="@color/myFav"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/_postServiceText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.6"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/keepcalm_medium"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:text="Profession"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/keepcalm_medium"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:text="Job Description"
            android:textColor="@color/myFav"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_postWorkplaceText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/edittext_background"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
            android:ems="10"
            android:fontFamily="@font/keepcalm_medium"
            android:gravity="center_vertical"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="Job Description"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:ignore="InvalidId" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:text="Budget  "
            android:fontFamily="@font/keepcalm_medium"
            android:textColor="@color/myFav"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_postBudgetText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/post_edittext_background"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/keepcalm_medium"
            android:gravity="center"
            android:text="$$"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:text="Time"
            android:textColor="@color/myFav"
            android:fontFamily="@font/keepcalm_medium"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_postTimeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:background="@drawable/post_edittext_background"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/keepcalm_medium"
            android:gravity="center"
            android:text="Enter Time"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/_applyPostButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck"  />

</LinearLayout>
